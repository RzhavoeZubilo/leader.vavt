<div class="row" style="margin-top: 30px;">
    <div class="col-md-12" style="margin-bottom: 20px;">
        {{{addbtn}}}
    </div>
    <hr>
    <div class="col-md-12">
        <div class="card-deck vavt-all-news">
        {{#match}}
            <div class="card">
                <img src="{{imgsrc}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h4 class="card-title">{{{name}}}</h4>
                    <p class="card-text">{{{text}}}</p>
                </div>
                <div class="card-footer text-muted bckgnone">
                    {{{readlnk}}}
                    <p>{{timemodified}}  <span>{{{user}}}</span></p>
                    <p style="text-align: right">{{#editlnk}}{{{editlnk}}}{{/editlnk}} {{#dellnk}}{{{dellnk}}}{{/dellnk}}</p>
                </div>
            </div>
        {{/match}}
        </div>
    </div>
</div>


<style>
    .card-deck.vavt-all-news .card {
        margin-bottom: 20px;
        min-width: 200px;
        max-width: 200px;
    }
    .vavt-all-news .card-img-top
    {
        object-fit: cover;
        max-height: 180px;
    }
</style>
